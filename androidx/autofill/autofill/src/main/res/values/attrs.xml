<resources>
    <declare-styleable name="Autofill.InlineSuggestion">
        <!-- Private boolean attribute to identify the theme and the child of the theme.  -->
        <attr name="isAutofillInlineSuggestionTheme" format="boolean" />
        <!-- Defines the overall style for the entire chip, such as the background.  -->
        <attr name="autofillInlineSuggestionChip" format="reference" />
        <!-- Defines the style for the start icon, such as the scaleType.  -->
        <attr name="autofillInlineSuggestionStartIconStyle" format="reference" />
        <!-- Defines the style of the title TextView, such as the color, size, etc.  -->
        <attr name="autofillInlineSuggestionTitle" format="reference" />
        <!-- Defines the style of the subtitle TextView, such as the color, size, etc.  -->
        <attr name="autofillInlineSuggestionSubtitle" format="reference" />
        <!-- Defines the style for the end icon, such as the scaleType.  -->
        <attr name="autofillInlineSuggestionEndIconStyle" format="reference" />
    </declare-styleable>
</resources>

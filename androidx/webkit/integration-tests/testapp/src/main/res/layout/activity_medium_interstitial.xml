<!--Orientation is decided at runtime-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_medium_interstitial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:ignore="Orientation">

    <!--Width, height, and margins are re-configured at runtime, depending on orientation-->
    <WebView
        android:id="@+id/malware_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <WebView
        android:id="@+id/phishing_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <WebView
        android:id="@+id/unwanted_software_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <WebView
        android:id="@+id/billing_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <!--Add more threat types (here and in the Activity), if we support more in the future-->

</LinearLayout>
